extend type Query {
    getCurrentConversation: [Chat]
}

extend type Mutation {
    createChat(message: String!): MutationResponse
    clearCurrentConversation: MutationResponse
}

extend type Subscription {
    chatSubscription: Chat
}

type Chat {
    chatId: String!
    userId: String!
    sender: String!
    message: String!
    createdAt: String
}